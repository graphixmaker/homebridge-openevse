{
  "pluginAlias": "OpenEVSE",
  "pluginType": "accessory",
  "headerText": "OpenEVSE Configuration (v2.0.0)",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "EV Charger"
      },
      "host": {
        "title": "OpenEVSE IP Address",
        "type": "string",
        "placeholder": "192.168.1.XX"
      },
      "mqtt_host": {
        "title": "MQTT Broker Host",
        "type": "string",
        "placeholder": "192.168.1.XX"
      },
      "mqtt_port": {
        "title": "MQTT Broker Port",
        "type": "integer",
        "default": 1883
      },
      "mqtt_topic": {
        "title": "MQTT Base Topic",
        "type": "string",
        "default": "openevse"
      },
      "mqtt_user": {
        "title": "MQTT Username",
        "type": "string"
      },
      "mqtt_pass": {
        "title": "MQTT Password",
        "type": "string",
        "format": "password"
      }
    },
    "required": ["host", "mqtt_host"]
  }
}
